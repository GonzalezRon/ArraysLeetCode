const longestConsecutive = function(nums){
    const set = new Set(nums)
    let maxCount = 0

    for(let num of nums){

        if(!set.has(num-1)){
            let count = 0

            while(set.has(num)){
                num++
                count++
            }  
                    
            maxCount = Math.max(maxCount,count )
        }
    }
    return maxCount
}





